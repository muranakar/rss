// „Éï„Ç£„Éº„Éâ„Éá„Éº„Çø„ÇíË™≠„ÅøËæº„ÇÄ
let feedData;
try {
  const response = await fetch('/feeds.json');
  feedData = await response.json();
} catch {
  feedData = { items: [], lastUpdated: null };
}

const { items, lastUpdated } = feedData;

// „Ç´„ÉÜ„Ç¥„É™„Éº„Åß„Éï„Ç£„É´„Çø„É™„É≥„Ç∞„Åß„Åç„Çã„Çà„ÅÜ„Å´„É¶„Éã„Éº„ÇØ„Å™„Ç´„ÉÜ„Ç¥„É™„Éº„ÇíÂèñÂæó
const categories = [...new Set(items.map(item => item.category))];
---

<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Feed - AI & ÂÄã‰∫∫ÈñãÁô∫</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
      line-height: 1.6;
      color: #333;
      background: #f5f5f5;
      padding: 20px;
    }

    .container {
      max-width: 800px;
      margin: 0 auto;
      background: white;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      padding: 30px;
    }

    h1 {
      font-size: 2rem;
      margin-bottom: 10px;
      color: #111;
    }

    .last-updated {
      color: #666;
      font-size: 0.9rem;
      margin-bottom: 30px;
    }

    .filters {
      display: flex;
      gap: 10px;
      margin-bottom: 30px;
      flex-wrap: wrap;
    }

    .filter-btn {
      padding: 8px 16px;
      border: 1px solid #ddd;
      background: white;
      border-radius: 20px;
      cursor: pointer;
      font-size: 0.9rem;
      transition: all 0.2s;
    }

    .filter-btn:hover {
      background: #f0f0f0;
    }

    .filter-btn.active {
      background: #007bff;
      color: white;
      border-color: #007bff;
    }

    .feed-item {
      padding: 20px 0;
      border-bottom: 1px solid #eee;
    }

    .feed-item:last-child {
      border-bottom: none;
    }

    .feed-item h2 {
      font-size: 1.2rem;
      margin-bottom: 8px;
    }

    .feed-item a {
      color: #111;
      text-decoration: none;
    }

    .feed-item a:hover {
      color: #007bff;
    }

    .feed-meta {
      display: flex;
      gap: 15px;
      font-size: 0.85rem;
      color: #666;
      margin-bottom: 8px;
    }

    .feed-source {
      font-weight: 600;
      color: #007bff;
    }

    .feed-category {
      background: #e9ecef;
      padding: 2px 8px;
      border-radius: 4px;
    }

    .feed-snippet {
      color: #555;
      font-size: 0.95rem;
      line-height: 1.5;
    }

    .no-items {
      text-align: center;
      padding: 40px;
      color: #999;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>üì∞ My Feed</h1>
    {lastUpdated && (
      <p class="last-updated">
        ÊúÄÁµÇÊõ¥Êñ∞: {new Date(lastUpdated).toLocaleString('ja-JP')}
      </p>
    )}

    <div class="filters">
      <button class="filter-btn active" data-category="all">„Åô„Åπ„Å¶</button>
      {categories.map(cat => (
        <button class="filter-btn" data-category={cat}>{cat}</button>
      ))}
    </div>

    <div id="feed-list">
      {items.length === 0 ? (
        <div class="no-items">
          „Éï„Ç£„Éº„Éâ„Éá„Éº„Çø„Åå„ÅÇ„Çä„Åæ„Åõ„Çì„ÄÇ<br />
          <code>npm run fetch-feeds</code> „ÇíÂÆüË°å„Åó„Å¶„Åè„Å†„Åï„ÅÑ„ÄÇ
        </div>
      ) : (
        items.map(item => (
          <article class="feed-item" data-category={item.category}>
            <div class="feed-meta">
              <span class="feed-source">{item.source}</span>
              <span class="feed-category">{item.category}</span>
              <time>{new Date(item.pubDate).toLocaleDateString('ja-JP')}</time>
            </div>
            <h2>
              <a href={item.link} target="_blank" rel="noopener noreferrer">
                {item.title}
              </a>
            </h2>
            {item.contentSnippet && (
              <p class="feed-snippet">{item.contentSnippet}...</p>
            )}
          </article>
        ))
      )}
    </div>
  </div>

  <script>
    // „Ç´„ÉÜ„Ç¥„É™„Éº„Éï„Ç£„É´„Çø„ÉºÊ©üËÉΩ
    const filterBtns = document.querySelectorAll('.filter-btn');
    const feedItems = document.querySelectorAll('.feed-item');

    filterBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        const category = btn.dataset.category;

        // „Ç¢„ÇØ„ÉÜ„Ç£„Éñ„Éú„Çø„É≥„ÅÆÂàá„ÇäÊõø„Åà
        filterBtns.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');

        // „Ç¢„Ç§„ÉÜ„É†„ÅÆ„Éï„Ç£„É´„Çø„É™„É≥„Ç∞
        feedItems.forEach(item => {
          if (category === 'all' || item.dataset.category === category) {
            item.style.display = 'block';
          } else {
            item.style.display = 'none';
          }
        });
      });
    });
  </script>
</body>
</html>
